<%- include('partials/header') %>
    <div class="w-full h-[50%] box-border mt-4 p-5 flex gap-5 flex-wrap  items-center">
        <%products.forEach((product)=> {%>
            <div class="w-[30%] h-[100%] rounded-xl bg-white">
                <div class="w-full h-[70%] flex flex-col justify-center items-center">
                    <img class="w-[70%] h-[70%] object-cover" src="../images/burger-3.jpg" alt="">
                </div>
                <div class="w-full box-border px-4 flex justify-between items-center">

                    <div>
                        <p>
                            <%=product.name%>
                        </p>
                        <p>$<%=product.price%>
                        </p>
                    </div>

                    <div onclick="addToCart('<%=product._id%>')" class="w-[2vw] h-[2vw] bg-yellow-600 rounded-sm">
                        <svg class="w-[2vw] h-[2vw]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                            fill="currentColor">
                            <path d="M11 11V5H13V11H19V13H13V19H11V13H5V11H11Z"></path>
                        </svg>
                    </div>


                </div>
            </div>
            <%})%>



    </div>
    <%- include('partials/footer') %>