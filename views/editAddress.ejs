<%- include('./partials/header') %>
    <div class="max-w-4xl mx-auto p-6 bg-white rounded-2xl shadow-xl my-6">
        <h2 class="text-2xl font-bold mb-6 text-center">Manage Address</h2>
        <form action="/updateAddress" method="post" class="space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Full Name</label>
                    <input type="text" name="name" value="<%= user.address[0]?.name || '' %>" required
                        class="mt-1 block w-full rounded-xl   focus:ring-blue-500 focus:border-blue-500 p-2 shadow-lg bg-gray-200">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Phone Number</label>
                    <input type="text" name="phoneNumber" value="<%= user.address[0]?.phoneNumber || '' %>" required
                        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2 shadow-lg bg-gray-200">
                </div>

                <div class="col-span-1 sm:col-span-2">
                    <label class="block text-sm font-medium text-gray-700">Address</label>
                    <input type="text" name="address" value="<%= user.address[0]?.Address || '' %>" required
                        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2  shadow-lg bg-gray-200">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">City</label>
                    <input type="text" name="city" value="<%= user.address[0]?.city || '' %>" required
                        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2 shadow-lg bg-gray-200">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">State</label>
                    <input type="text" name="state" value="<%= user.address[0]?.state || '' %>" required
                        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2 shadow-lg bg-gray-200">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Country</label>
                    <input type="text" name="Nearplace" value="<%= user.address[0]?.nearPlace || '' %>" required
                        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2 shadow-lg bg-gray-200">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700">Zip Code</label>
                    <input type="text" name="pincode" value="<%= user.address[0]?.pincode || '' %>" required
                        class="mt-1 block w-full rounded-xl border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2 shadow-lg bg-gray-200">
                </div>


            </div>

            <div class="text-center">
                <button type="submit"
                    class="bg-blue-500 text-white px-6 py-2 rounded-xl shadow-md hover:bg-blue-600 transition-all">Save
                    Address</button>
            </div>
        </form>
    </div>

    <%- include('./partials/footer') %>