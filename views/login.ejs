<%- include('./partials/header') %>
    <style>
        #main{
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
    <div id="main" class="w-full h-screen pt-40">
        <div id="signin" class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md m-auto hidden">
            <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>
            <form action="/login" method="post">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                       Email
                    </label>
                    <div class="flex items-center border border-gray-300 rounded">
                        <span class="px-3 text-gray-500">
                            <i class="fas fa-user"></i>
                        </span>
                        <input
                            class="w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="email" type="text" placeholder="Type your username" name="email">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Password
                    </label>
                    <div class="flex items-center border border-gray-300 rounded">
                        <span class="px-3 text-gray-500">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input
                            class="w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="password" type="password" placeholder="Type your password" name="password">
                    </div>
                    <div class="text-right mt-2">
                        <a href="#" class="text-sm text-gray-600 hover:text-gray-900">Forgot password?</a>
                    </div>
                </div>
                <div class="mb-6">
                    <button
                        class="w-full py-2 px-4 bg-gradient-to-r from-teal-400 to-purple-500 text-white font-bold rounded focus:outline-none focus:shadow-outline"
                        type="submit">
                        LOGIN
                    </button>
                </div>
                <div class="text-center mb-4">
                    <p class="text-gray-600">Or Sign Up Using</p>
                    <div class="flex justify-center mt-2">
                        <a href="#" class="mx-2 text-blue-600"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="mx-2 text-blue-400"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="mx-2 text-red-600"><i class="fab fa-google"></i></a>
                    </div>
                </div>
                <div class="text-center">
                    <p class="text-gray-600">Or Sign Up Using</p>
                    <a href="#" onclick="signUp()" class="text-blue-600 hover:underline">SIGN UP</a>
                </div>
            </form>
        </div>
        <div id="signup" class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md m-auto">
            <h2 class="text-2xl font-bold mb-6 text-center">Sign Up</h2>
            <form action="/register" method="post">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                        Username
                    </label>
                    <div class="flex items-center border border-gray-300 rounded">
                        <span class="px-3 text-gray-500">
                            <i class="fas fa-user"></i>
                        </span>
                        <input
                            class="w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="username" type="text" placeholder="Type your username" name="fullname">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                       Email
                    </label>
                    <div class="flex items-center border border-gray-300 rounded">
                        <span class="px-3 text-gray-500">
                            <i class="fas fa-user"></i>
                        </span>
                        <input
                            class="w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="email" type="text" placeholder="Type your username" name="email">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Password
                    </label>
                    <div class="flex items-center border border-gray-300 rounded">
                        <span class="px-3 text-gray-500">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input
                            class="w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="password" type="password" placeholder="Type your password" name="password">
                    </div>
                </div>
                <div class="mb-6">
                    <button
                        class="w-full py-2 px-4 bg-gradient-to-r from-teal-400 to-purple-500 text-white font-bold rounded focus:outline-none focus:shadow-outline"
                        type="submit">
                       Sign Up
                    </button>
                </div>
                <div class="text-center mb-4">
                    <p class="text-gray-600">Or Sign Up Using</p>
                    <div class="flex justify-center mt-2">
                        <a href="#" class="mx-2 text-blue-600"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="mx-2 text-blue-400"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="mx-2 text-red-600"><i class="fab fa-google"></i></a>
                    </div>
                </div>
                <div class="text-center">
                    <p class="text-gray-600">Or Sign Up Using</p>
                    <a href="#" onclick="signIn()" class="text-blue-600 hover:underline">SIGN IN</a>
                </div>
            </form>
        </div>
    </div>
    <%- include('./partials/footer') %>