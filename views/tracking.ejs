<html lang="en">
 <head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1" name="viewport"/>
  <title>
   Order Details
  </title>
  <script src="https://cdn.tailwindcss.com">
  </script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <style>
   /* Custom scrollbar removal for timeline vertical line */
    /* No extra styles needed, Tailwind handles most */
  </style>
 </head>
 <body class="bg-white min-h-screen flex items-center justify-center p-4">
  <div class="max-w-md w-full border border-gray-200 rounded-lg shadow-sm overflow-hidden">
   <header class="flex items-center justify-between px-5 py-3 border-b border-gray-200">
    <h2 class="text-gray-900 text-lg font-normal">
     #AT456BB
    </h2>
    <button aria-label="Close" class="text-gray-600 hover:text-gray-900 focus:outline-none">
     <i class="fas fa-times text-lg">
     </i>
    </button>
   </header>
   <div class="px-5 py-2 border-b border-gray-200">
    <p class="text-gray-600 text-sm">
     Order details
    </p>
   </div>
   <section class="px-5 py-4 border-b border-gray-200">
    <h3 class="text-gray-700 font-normal mb-3">
     Items
    </h3>
    <div class="flex items-center space-x-3">
     <div class="flex-shrink-0 w-12 h-12 rounded-md bg-gray-100 flex items-center justify-center">
      <img alt="Black sports jacket folded front view" class="w-10 h-10 object-contain rounded-md" height="48" src="https://storage.googleapis.com/a1aa/image/96f03b6d-c530-42f2-fdd5-96c563debf98.jpg" width="48"/>
     </div>
     <div class="flex-1">
      <p class="text-gray-900 text-sm font-normal">
       Sports Jacket
      </p>
      <p class="text-gray-500 text-xs">
       Fashion
      </p>
     </div>
     <p class="text-gray-900 text-xs font-normal">
      1pcs
     </p>
     <p class="text-gray-900 text-sm font-bold ml-6">
      $120.99
     </p>
    </div>
   </section>
   <section class="px-5 py-4 border-b border-gray-200 space-y-3 text-sm">
    <div class="flex justify-between">
     <p class="text-gray-600">
      Created at
     </p>
     <p class="text-gray-900 font-normal">
      March 03, 2024
     </p>
    </div>
    <div class="flex justify-between">
     <p class="text-gray-600">
      Delivery Services
     </p>
     <p class="text-gray-900 font-normal">
      Express
     </p>
    </div>
    <div class="flex justify-between">
     <p class="text-gray-600">
      Payment method
     </p>
     <p class="text-gray-900 font-normal">
      Bank Transfer
     </p>
    </div>
    <div class="flex justify-between">
     <p class="text-gray-600">
      Status
     </p>
     <p class="text-gray-900 font-normal">
      Processed
     </p>
    </div>
   </section>
   <section class="px-5 py-4 border-b border-gray-200 space-y-3 text-sm">
    <div class="flex justify-between">
     <p class="text-gray-600">
      Customer name
     </p>
     <p class="text-gray-900 font-normal">
      Cameron Williamson
     </p>
    </div>
    <div class="flex justify-between">
     <p class="text-gray-600">
      Email
     </p>
     <a class="text-blue-600 font-normal hover:underline" href="mailto:cameronwilliamson@mail.com">
      cameronwilliamson@mail.com
     </a>
    </div>
    <div class="flex justify-between">
     <p class="text-gray-600">
      Phone
     </p>
     <p class="text-gray-900 font-normal">
      (+1) 840-492-1485
     </p>
    </div>
   </section>
   <section class="px-5 py-4 border-b border-gray-200 text-sm">
    <p class="text-gray-600 mb-3">
     Timeline
    </p>
    <div class="space-y-6">
     <!-- Order Processed -->
     <div class="flex space-x-4">
      <div class="flex flex-col items-center">
       <div class="w-5 h-5 rounded-full border-2 border-blue-600 bg-white flex items-center justify-center">
        <div class="w-3 h-3 rounded-full bg-blue-600">
        </div>
       </div>
       <div class="flex-1 w-px bg-gray-300 mt-1">
       </div>
      </div>
      <div>
       <p class="font-semibold text-gray-900 mb-1">
        Order Processed
       </p>
       <p class="text-gray-500 text-xs max-w-xs">
        The order is being prepared (products are being packed)
       </p>
      </div>
     </div>
     <!-- Payment Confirmed -->
     <div class="flex space-x-4">
      <div class="flex flex-col items-center">
       <div class="w-5 h-5 rounded-full border-2 border-gray-300 bg-white flex items-center justify-center">
        <div class="w-3 h-3 rounded-full bg-white">
        </div>
       </div>
       <div class="flex-1 w-px bg-gray-300 mt-1">
       </div>
      </div>
      <div>
       <p class="font-semibold text-gray-900 mb-1">
        Payment Confirmed
       </p>
       <p class="text-gray-500 text-xs max-w-xs">
        Payment has been successfully processed and verified.
       </p>
      </div>
     </div>
     <!-- Order Placed -->
     <div class="flex space-x-4">
      <div class="flex flex-col items-center">
       <div class="w-5 h-5 rounded-full border-2 border-gray-300 bg-white flex items-center justify-center">
        <div class="w-3 h-3 rounded-full bg-white">
        </div>
       </div>
      </div>
      <div>
       <p class="font-semibold text-gray-900 mb-1">
        Order Placed
       </p>
       <p class="text-gray-500 text-xs max-w-xs">
        Order has been successfully placed by the customer
       </p>
      </div>
     </div>
    </div>
   </section>
   <section class="px-5 py-4 text-sm">
    <p class="text-gray-600 mb-3">
     Payment
    </p>
    <div class="space-y-2">
     <div class="flex justify-between">
      <p class="text-gray-900 font-normal">
       Subtotal
      </p>
      <p class="text-gray-900 font-bold">
       $120.99
      </p>
     </div>
     <div class="flex justify-between">
      <p class="text-gray-900 font-normal">
       Shipping fee
      </p>
      <p class="text-gray-900 font-bold">
       $5.75
      </p>
     </div>
     <div class="flex justify-between">
      <p class="text-gray-900 font-normal">
       Total
      </p>
      <p class="text-gray-900 font-bold">
       $126.74
      </p>
     </div>
    </div>
   </section>
  </div>
 </body>
</html>
